{% extends '../layout.twig' %}

{% set title = "Your password" %}

{% block content %}
  <table cellpadding="0" cellspacing="0" border="0">
    <tr>
      <td>
        <font color="#000" style="font-size:15px;">
          Welcome! Use the following password for log in.
        </font>
      </td>
    </tr>
    <tr>
      <td style="padding-top: 15px;">
        <font color="#000" style="font-size:16px; line-height: 1.5em;">
            <b>{{ password }}</b>
        </font>
      </td>
    </tr>
    <tr>
      <td style="padding-top: 15px;">
        <font color="#000000" style="font-size:15px;">
          You can change it on the settings page later.
        </font>
      </td>
    </tr>
    <tr>
      <td style="padding-top: 15px;">
        <font color="#999" style="font-size:13px;">
          If you did not sign up, please ignore this email.
        </font>
      </td>
    </tr>
  </table>
{% endblock %}

{% block footer %}{% endblock %}
