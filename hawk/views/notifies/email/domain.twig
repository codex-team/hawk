{% extends '../layout.twig' %}

{% set title = domain ~ " token" %}

{% block content %}
  <table cellpadding="0" cellspacing="0" border="0">
    <tr>
      <td>
        <font color="#000" style="font-size:15px;">
          Use this token for "{{ domain }}".
        </font>
      </td>
    </tr>
    <tr>
      <td style="padding-top: 15px;">
        <font color="#000" style="font-size:16px; line-height: 1.5em;">
            <b>{{ token }}</b>
        </font>
      </td>
    </tr>
    <tr>
      <td style="padding-top: 15px;">
        <font color="#000000" style="font-size:15px;">
          Check out our <a href="{{ serverUrl }}/docs">docs page</a> for getting next step.
        </font>
      </td>
    </tr>
  </table>
{% endblock %}

{% block footer %}{% endblock %}
