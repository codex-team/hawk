{% extends '../layout.twig' %}

{% set title = "Your password" %}

{% block content %}
  <table cellpadding="0" cellspacing="0" border="0">
    <tr>
      <td>
        <font color="#000" style="font-size:15px;">
          You requested new password. Use the following link to set one:
        </font>
      </td>
    </tr>
    <tr>
      <td style="padding-top: 15px;">
        <font color="#000" style="font-size:16px; line-height: 1.5em;">
            <a href="{{ recoverLink }}">{{ recoverLink }}</a>
        </font>
      </td>
    </tr>
    <tr>
      <td style="padding-top: 30px;">
        <font color="#999" style="font-size:13px;">
          If you didn't request a new password, please ignore this email.
        </font>
      </td>
    </tr>
  </table>
{% endblock %}

{% block footer %}{% endblock %}
