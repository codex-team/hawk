{% extends 'layout.twig' %}

{% block content %}
  <table cellpadding="0" cellspacing="0" border="0" bgcolor="#ffffff">
    <tr>
      <td style="font-family: inherit">
        <font color="#000000" style="font-size:15px;">
          Hello. Weâ€™ve got a {{ event.tag|capitalize }} Error on {{ domain }}. Please, take a look.
        </font>
      </td>
    </tr>
    <tr>
      <td style="padding-top: 15px; font-family: inherit">
        <font color="#000000" style="font-size:16px; line-height: 1.5em;">
            <b>{{ event.message }}</b>
        </font>
      </td>
    </tr>
    <tr>
      <td style="padding-top: 15px; font-family: inherit">
