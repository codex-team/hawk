<div class="garage-header">

    {% if domain != null %}

        {% set url = "/garage/" ~ domain.name %}
        <h1 class="garage-header__page-title">
            <a href="{{ url }}">{{ domain.name }}</a>
        </h1>
        <a class="garage-header__tab" href="{{ url }}/fatal">
            Fatal
            {% if domain.fatal.unread %}
              <span class="counter">{{ domain.fatal.unread }} new</span>
            {% endif %}
        </a>
        <a class="garage-header__tab" href="{{ url }}/warnings">
            Warnings
            {% if domain.warnings.unread %}
              <span class="counter">{{ domain.warnings.unread }} new</span>
            {% endif %}
        </a>
        <a class="garage-header__tab" href="{{ url }}/notice">
            Notice
            {% if domain.notice.unread %}
              <span class="counter">{{ domain.notice.unread }} new</span>
            {% endif %}
        </a>
        <a class="garage-header__tab" href="{{ url }}/javascript">
            JavaScript Errors
            {% if domain.javascript.unread %}
              <span class="counter">{{ domain.javascript.unread }} new</span>
            {% endif %}
        </a>

    {% else %}
        <h1 class="garage-header__page-title">
            Dashboard
        </h1>
        <a href="/docs" class="garage-header__docs">
            Platform Documentation
        </a>
    {% endif %}

</div>
