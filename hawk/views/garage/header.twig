<div class="garage-header">

    {% if project != null %}

        {% set url = "/garage/" ~ project.user.projectUri %}
        <h1 class="garage-header__page-title">
            <a href="{{ url }}">{{ project.name }}</a>
        </h1>
        <a class="garage-header__tab garage-header__tab--fatal {% if tab == 'fatal' %}garage-header__tab--current{% endif %}" href="{{ url }}/fatal">
            Fatal
            {% if project.fatal.unread %}
              <span class="counter">{{ project.fatal.unread }} new</span>
            {% endif %}
        </a>
        <a class="garage-header__tab garage-header__tab--warnings {% if tab == 'warnings' %}garage-header__tab--current{% endif %}" href="{{ url }}/warnings">
            Warnings
            {% if project.warnings.unread %}
              <span class="counter">{{ project.warnings.unread }} new</span>
            {% endif %}
        </a>
        <a class="garage-header__tab garage-header__tab--notice {% if tab == 'notice' %}garage-header__tab--current{% endif %}" href="{{ url }}/notice">
            Notice
            {% if project.notice.unread %}
              <span class="counter">{{ project.notice.unread }} new</span>
            {% endif %}
        </a>
        <a class="garage-header__tab garage-header__tab--javascript {% if tab == 'javascript' %}garage-header__tab--current{% endif %}" href="{{ url }}/javascript">
            JavaScript Errors
            {% if project.javascript.unread %}
              <span class="counter">{{ project.javascript.unread }} new</span>
            {% endif %}
        </a>

    {% else %}
        <h1 class="garage-header__page-title">
            Dashboard
        </h1>
        <a href="/docs" class="garage-header__docs">
            Platform Documentation
        </a>
    {% endif %}

</div>
