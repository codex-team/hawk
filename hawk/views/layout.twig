<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="language" content="en-us">
    <title>{{ meta.title or 'Hawk.so' }}</title>
    <meta property="og:title" content="{{ meta.title or 'Hawk.so' }}" />
    <meta property="og:site_name" content="Hawk">
    <meta name="description" property="og:description" content="{{ meta.description or 'Fast and lightweight
errors tracking service.' }}" />
    <link rel="stylesheet" href="/static/build/bundle.css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:400,400i,700,700i,900" rel="stylesheet">
    <script type="text/javascript" src="/static/build/bundle.js"></script>
    <link rel="icon" type="image/png" href="/static/images/favicon.png" />
    <script>
      hawkso.docReady(function () {
        hawkso.init();
      });
    </script>
  </head>
  <body>
    {% block body %}{% endblock %}
    {% if env.HAWK_CATCHER_TOKEN is not empty  %}
      <script src="https://cdn.rawgit.com/codex-team/hawk.client/master/hawk.js" async onload="hawk.init('{{ env.HAWK_CATCHER_TOKEN }}', '{{ env.SERVER_URL }}', {{ env.SOCKET_PORT }}, 'catcher/client', {{ env.ENVIRONMENT == 'DEVELOPMENT' ? 'false' : 'true' }});"></script>
    {% endif %}
  </body>
</html>
